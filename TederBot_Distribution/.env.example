# =================================================================
# Teder Crypto Trading Bot - Environment Configuration
# =================================================================

# Trading Configuration
DRY_RUN=true                    # Set to 'false' for live trading
TRADING_MODE=simulation         # simulation, live

# Coinone API Configuration
COINONE_ACCESS_TOKEN=your_access_token_here
COINONE_SECRET_KEY=your_secret_key_here

# Logging Configuration
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_ROTATION_SIZE=10MB          # Log file rotation size
LOG_RETENTION_DAYS=7            # Days to keep old logs

# Trading Parameters
PROFIT_TARGET=4                 # Profit target in KRW
MAX_HOLD_HOURS=24              # Maximum holding time in hours
RSI_PERIOD=14                  # RSI calculation period
EMA_PERIOD=20                  # EMA calculation period
RSI_OVERBOUGHT=70             # RSI overbought threshold

# System Configuration
TZ=Asia/Seoul                  # Timezone
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Docker Build Configuration
BUILD_DATE=
VCS_REF=
VERSION=1.0.0

# Database Configuration (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teder_trading
DB_USER=teder
DB_PASSWORD=secure_password_here

# Redis Configuration (if using)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Security Configuration
API_RATE_LIMIT=100             # API calls per minute
MAX_CONNECTIONS=10             # Maximum concurrent connections
ENABLE_CORS=false             # Enable CORS for web interface

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=6h            # Backup interval (1h, 6h, 12h, 24h)
BACKUP_RETENTION_DAYS=30      # Days to keep backups
BACKUP_LOCATION=/app/backups  # Backup storage location

# Alert Configuration (optional)
ALERTS_ENABLED=false
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_TO=

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_API_RESPONSES=false

# Performance Tuning
WORKER_THREADS=2
MAX_MEMORY=512M
GC_THRESHOLD=0.8

# Network Configuration
HTTP_TIMEOUT=30               # HTTP request timeout in seconds
RETRY_ATTEMPTS=3             # Number of retry attempts
RETRY_DELAY=1                # Delay between retries in seconds

# Feature Flags
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_WEB_INTERFACE=false
ENABLE_API_ENDPOINTS=false

# Custom Strategy Parameters
CUSTOM_RSI_THRESHOLDS=false   # Use custom RSI buy/sell thresholds
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70

CUSTOM_EMA_SLOPES=false       # Use custom EMA slope thresholds
EMA_BUY_SLOPE_3=0.3
EMA_BUY_SLOPE_5=0.2

# Risk Management
POSITION_SIZE_PERCENT=100     # Percentage of balance to use (100 = all available)
STOP_LOSS_PERCENT=0           # Stop loss percentage (0 = disabled)
TAKE_PROFIT_MULTIPLIER=1.0    # Take profit multiplier

# Maintenance Configuration
MAINTENANCE_WINDOW_START=03:00  # Maintenance window start time (UTC)
MAINTENANCE_WINDOW_END=04:00    # Maintenance window end time (UTC)
AUTO_UPDATE_ENABLED=false       # Enable automatic updates